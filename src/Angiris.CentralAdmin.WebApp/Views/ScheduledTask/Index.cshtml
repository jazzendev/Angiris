@{
    ViewBag.Title = "Crawl Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div >

    <h2>Mocking FlightCrawlRequestFactory.StartPushTaskMessages</h2>

    @using (Ajax.BeginForm("_GenerateTasks", "ScheduledTask", new { },
    new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "ResponseDataPanel", OnBegin = "StartLoading()", OnComplete = "EndLoading()" }
    ))
    {
        <div class="row">
            <div class="col-md-3">
               TaskCount: @Html.DropDownList("taskCount",(new string[] {"10","100","300"}).Select(c=>new SelectListItem(){Text=c,Value = c}))
            </div>
            <div class="col-md-3">
                <input id="startbutton" type="submit" value="Start" class="btn btn-default"/>
                <span onclick="ClearLog()" class="btn btn-default">Clear Log</span>
            </div>
            <div class="col-md-3" id="loading">
                <p>loading...</p>
            </div>
        </div>

    }
    <div id="ResponseDataPanel">
        
    </div>
    <ul id="msgList"></ul>

</div>

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {

            EndLoading();
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.crawlResultHub;
            // Create a function that the hub can call back to display messages.
            chat.client.addNewMessage = function (message) {
                // Add the message to the page.
                $('#msgList').append('<li><strong>' + (new Date()).toLocaleTimeString()
                    + '</strong>: ' + htmlEncode(message) + '</li>');
            };
            // Start the connection.
            $.connection.hub.start();
        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<p />').text(value).html();
            return encodedValue;
        }

        function StartLoading() {
            $('#loading').fadeIn();
        }

        function EndLoading() {
            $('#loading').fadeOut();
        }

        function ClearLog() {
            $('#msgList').empty();
        }
    </script>
}